<style>
	.date-big {
		text-align: center;
		font-size: 10rem;
		font-weight: bolder;
		color: var(--primary-color);
	}

	.date-small {
		text-align: left;
		font-size: 3rem;
		font-weight: bolder;
		color: var(--primary-color);
	}

	.date-container {
		display: flex;
		gap: 2rem;
		justify-content: center;
		align-items: center;
	}

	.title-date {
		font-size: 2rem;
		font-weight: bolder;
		color: var(--dark-grey);

		strong {
			color: var(--primary-color);
			font-weight: bold;
		}
	}

	ul, ol {
		padding-top: 1.5rem;
		list-style-type: decimal;

		li {
			font-size: 1.8rem;
			font-weight: 700;
			color: var(--dark-grey);
			margin: 1rem 0;
			text-wrap: balance;

			&::marker {
				font-size: 5rem;
				color: var(--primary-color);
			}

			strong {
				font-size: 3rem;
			}
		}
	}

	.playground {
		border-radius: 10px;
		width: 90%;
		border: 2px solid var(--primary-color);
	}

	.playground-label {
		color: var(--primary-color);
		font-size: 1.5rem;
		font-weight: bold;
		position: absolute;
		left: 0;
		bottom: 50px;
		background-color: white;
		padding: 0.5rem 1.5rem;
		border: 2px solid var(--primary-color);
		border-radius: 10px;
	}

	.tweet {
		height: auto;
		position: relative;
		border-radius: 10px;
		border: 2px solid var(--primary-color);
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
	}

	.reaction {
		position: absolute;
		left: 70%;
		top: 43%;
		width: 200px;
		z-index: 10;
		filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.3));
	}
</style>
