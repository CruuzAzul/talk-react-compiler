---
import React from "react";
interface Props {
  title: string;
  punctuation: string;
  style?: React.CSSProperties;
}

const { title, punctuation, style } = Astro.props;
---

<div
	class="titleSlide"
  style={{
    ...style,
  }}
>
    <p>
      {title}&nbsp;<span>{punctuation}</span>
    </p>
</div>

<style lang="scss">
	.titleSlide {
		width: fit-content;
		display: flex;
		justify-content: start;
		align-items: center;
		font-size: 1.2rem;
		padding: 0 1.5rem;
		margin-bottom: 3rem;
		font-weight: 700;
		background-color: var(--background-color);
		border: dashed 2px var(--primary-color);
		border-radius: 15px;

		p {
			text-wrap: balance;
			margin: 0.6rem;
		}

		p span {
			color: var(--primary-color);
		}
	}
</style>
