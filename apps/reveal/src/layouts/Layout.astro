---
const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width"/>
		<link rel="icon" type="image/svg+xml" href="/slides-template/favicon.svg"/>

		<meta name="generator" content={Astro.generator}/>

		<title>{title}</title>
	</head>

	<body>
		<slot/>

		<script>
			import Reveal from "reveal.js";
			import RevealHighlight from "reveal.js/plugin/highlight/highlight";
			import RevealNotes from "reveal.js/plugin/notes/notes";

			Reveal.initialize({
				transition: "none",
				history: true,
				// progress: false,
				// controls: false,
				autoAnimateDuration: 0.5,
				autoAnimateEasing: "cubic-bezier(0.4, 0, 0.2, 1)",
				plugins: [RevealHighlight, RevealNotes], // use this if you want to show some code
			});
		</script>
	</body>
</html>

<style is:global>
	@import "reveal.js/dist/reveal.css";
	@import "reveal.js/dist/theme/white.css";
	@import "../../src/styles/highlightjs-theme-vs2015.css";
	@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');

	:root {
		--primary-color: #0A7EA4;
		--dark-background-color: #0A7EA499;
		--background-color: #E6F7FF;
		--lighter-grey: #F5F5F5;
		--light-grey: #e4e4e4;
		--grey: #999;
		--dark-grey: #23272F;
		--red: #EE4B2B;
		--background-red: #FFEBE6;
	}

	* {
		scrollbar-width: none;

		pre {
			-webkit-transition: font-size .5s ease;
			-moz-transition: font-size .5s ease;
			-o-transition: font-size .5s ease;
			transition: font-size .5s ease;
		}
	}

	*:not(pre):not(pre *) {
		font-family: 'Montserrat', sans-serif !important;
		font-optical-sizing: auto;
		font-style: normal;
	}

	pre {
		border-radius: 5px;
		box-shadow: none !important;
	}

	code {
		font-size: 0.8rem;
		border-radius: 5px;
		line-height: 1.5rem;
		padding: 2rem 2rem !important;
		max-height: unset !important;
		box-shadow: none !important;
	}

	section.present.present {
		.cm-content {
			&:hover {
