<style>
	.references {
		display: flex;
	}

	a {
		color: var(--primary-color);
		text-decoration: none;
	}

	ul, ol {
		margin-left: 0 !important;
		list-style-type: disc;

		li {
			font-size: 1.5rem;
			font-weight: 700;
			color: var(--dark-grey);
			margin: 1rem 0;
			text-wrap: balance;

			&::marker {
				font-size: 2rem;
				color: var(--primary-color);
			}

			strong {
				color: var(--primary-color);
			}
		}
	}
</style>
